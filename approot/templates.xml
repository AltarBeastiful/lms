<?xml version="1.0" encoding="UTF-8" ?>
<messages xmlns:if="Wt.WTemplate.conditions">
<!--FORMS message blocks-->

<message id="template-main">
	${navbar-top class="main-nav"}
	${contents class="container"}
	${player}
</message>

<message id="template-home">
	${tr:msg-home-welcome}
</message>

<message id="template-explore">
	${filters}
	${contents}
</message>

<message id="template-filters">
	<div class="form-group">
		${add-filter}${filters}
	</div>
</message>

<message id="template-filter-add">
	<div class="form-horizontal">
		<div class="form-group">
			<label class="control-label col-sm-2"  for="${id:type}">
				${tr:msg-filter-type}
			</label>
			<div class="col-sm-10">
				${type}
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2"  for="${id:value}">
				${tr:msg-filter-value}
			</label>
			<div class="col-sm-10">
				${value}
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				${add class="btn-primary"} ${cancel}
			</div>
		</div>
	</div>
</message>

</messages>
